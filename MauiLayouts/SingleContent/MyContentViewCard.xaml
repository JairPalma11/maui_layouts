<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="MauiLayouts.SingleContent.MyContentViewCard">
    <Frame
        CornerRadius="20"
        BorderColor="{Binding Source={x:Reference this}, Path=MyBorderColor}">

        <VerticalStackLayout>

            <Label
                Text="{Binding Source={x:Reference this}, Path=MyTitle}" />

        </VerticalStackLayout>
    </Frame>
</ContentView>

