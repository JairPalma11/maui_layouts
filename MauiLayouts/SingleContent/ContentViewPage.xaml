<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayouts.SingleContent.ContentViewPage"
             xmlns:controls="clr-namespace:MauiLayouts.SingleContent"
             Title="ContentViewPage">
    <VerticalStackLayout
        Spacing="20"
        Margin="20">

        <controls:MyContentViewCard
            MyTitle="Titulo usando Content View y borde azul."
            MyBorderColor="Blue" />

        <controls:MyContentViewCard
            MyTitle="Titulo usando Content View y borde rojo."
            MyBorderColor="Red"/>

        <controls:MyContentViewCard
            MyTitle="Titulo usando Content View y borde verde."
            MyBorderColor="Green"/>
    </VerticalStackLayout>
</ContentPage>
