<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayouts.MultipleContent.GridPage"
             Title="GridPage">
    <Grid
        Margin="20"
        ColumnSpacing="10"
        RowSpacing="10"
        RowDefinitions="Auto, Auto, Auto, Auto, *"
        ColumnDefinitions="30, *">

        <Border
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            StrokeShape="RoundRectangle 20">

            <Image
                Source="grid_image" />

        </Border>

        <Image
            Grid.Column="0"
            Grid.Row="1"
            Source="person_icon" />

        <Entry
            Placeholder="Nombre"
            Grid.Column="1"
            Grid.Row="1"/>

        <Entry
            Placeholder="Apellidos"
            Grid.Column="1"
            Grid.Row="2"/>

        <Image
            Grid.Column="0"
            Grid.Row="3"
            Source="email_icon" />

        <Entry
            Placeholder="Ingresa email"
            Grid.Column="1"
            Grid.Row="3"/>

        <Button
            VerticalOptions="EndAndExpand"
            Margin="0, 20"
            Grid.ColumnSpan="2"
            Grid.Column="0"
            Grid.Row="4"
            Text="Ordena" />
    </Grid>
</ContentPage>
