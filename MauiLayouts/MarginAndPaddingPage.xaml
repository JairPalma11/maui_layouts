<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayouts.MarginAndPaddingPage"
             Title="MarginAndPaddingPage">
    <VerticalStackLayout>
        <BoxView
            Margin="50"
            HeightRequest="50"
            Color="Orange" />

        <VerticalStackLayout
            BackgroundColor="DarkRed"
            Padding="50">

            <BoxView
                HeightRequest="50"
                Color="Black" />

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
